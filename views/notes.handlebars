<div class="container">
    {{#each notes}}
    <div class="card">
        <h5 class="card-header">Add a Note</h5>
        <div class="card-body">
            <h5 class="card-title">{{this.title}}</h5>
            <form>
                <div class="form-group">
                    <label for="note-title">Note Title</label>
                    <input type="text" class="form-control" id="note-title" placeholder="Title">
                </div>
                <div class="form-group">
                    <label for="note-text">Enter your note here:</label>
                    <textarea class="form-control" id="note-text" rows="3" placeholder="Your note here..."></textarea>
                </div>
            </form>
            <button class="btn btn-primary add-note" value={{this._id}} company={{this.company}}>Submit</button>
        </div>
    </div>
    {{/each}}
</div>