<div class="fluid-container">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    Polygon
                </div>
                <ul class="list-group list-group-flush">
                    {{#each polygon}}
                    <li class="list-group-item">
                        <div class="card">
                            <h5 class="card-header"><a href={{this.link}} target="#">{{this.title}}</a></h5>
                            <div class="card-body">
                                <a href="#" value={{this._id}}class="btn btn-primary">Favorite</a>
                            </div>
                        </div>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="col">
            <div class="card">
                <div class="card-header">
                    Gamespot
                </div>
                <ul class="list-group list-group-flush">
                    {{#each gamespot}}
                    <li class="list-group-item">
                        <div class="card">
                            <h5 class="card-header"><a href={{this.link}} target="#">{{this.title}}</a></h5>
                            <div class="card-body">
                                <p class="card-text">{{this.summary}}</p>
                                <a href="#" class="btn btn-primary">Favorite</a>
                            </div>
                        </div>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="col">
            <div class="card">
                <div class="card-header">
                    Destructoid
                </div>
                <ul class="list-group list-group-flush">
                    {{#each destructoid}}
                    <li class="list-group-item">
                        <div class="card">
                            <h5 class="card-header"><a href={{this.link}} target="#">{{this.title}}</a></h5>
                            <div class="card-body">
                                <p class="card-text">{{this.summary}}</p>
                                <a href="#" class="btn btn-primary">Favorite</a>
                            </div>
                        </div>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>